---
import "../styles/global.css";

export interface Props {
  title: string;
  description: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title,
  description,
  image = "/og-image.png",
  canonicalURL = Astro.site
    ? new URL(Astro.url.pathname, Astro.site).href
    : Astro.url.pathname,
} = Astro.props;

const fullTitle =
  title === "awa" ? title.toLowerCase() : `${title.toLowerCase()} / awa`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={canonicalURL} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:creator" content="@alwalxed" />
    <meta name="theme-color" content="#0f172a" />
    <meta name="color-scheme" content="dark" />
    <link rel="sitemap" href="/sitemap.xml" />
  </head>

  <body class="min-h-svh bg-slate-900 text-slate-100">
    <div
      class="min-h-svh grid grid-rows-[auto_1fr_auto] max-w-4xl mx-auto px-4 py-8"
    >
      <header class="mb-12">
        <nav class="grid grid-cols-[auto_1fr] items-center gap-4">
          <a href="/" class="justify-self-start">
            <img src="/favicon-32x32.png" height="32" width="32" alt="Logo" />
          </a>

          <div
            class="grid grid-flow-col auto-cols-max gap-3 md:gap-6 justify-self-end"
          >
            <a
              href="https://x.com/alwalxed"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-blue-400 transition-colors"
            >
              twitter
            </a>
            <a
              href="https://instagram.com/alwalexd"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-blue-400 transition-colors"
            >
              insta
            </a>
            <a
              href="mailto:hey@alwalxed.com"
              target="_blank"
              rel="noopener noreferrer"
              class="hover:text-blue-400 transition-colors"
            >
              email
            </a>
          </div>
        </nav>
      </header>

      <main class="w-full">
        <slot />
      </main>

      <footer
        class="mt-16 pt-8 border-t border-slate-700 text-slate-400 text-sm"
      >
        <div class="grid grid-cols-[1fr_auto] items-center gap-4">
          <p class="justify-self-start">built & open-sourced</p>
          <a
            class="underline underline-offset-4 hover:text-slate-300 transition-colors justify-self-end"
            href="https://github.com/alwalxed/awa"
          >
            repository
          </a>
        </div>
      </footer>
    </div>
  </body>
</html>
